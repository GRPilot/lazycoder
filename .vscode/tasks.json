{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "build_type",
            "description": "Select the build type:",
            "type": "pickString",
            "options": [
                "Debug",
                "Release"
            ],
            "default": "Debug"
        }
    ],
    "tasks": [
        //=================== Setup vscode project ====================//
        {
            "label": "[python] Setup VSCode project",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/scripts/configure_vscode.py"
            ],
            "problemMatcher": "$gcc",
        },

        //====================== Configure tasks ======================//
        {
            "label": "[cmake] Configure",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/scripts/python/configure.py",
                "${input:build_type}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
        },

        //====================== Build tasks ======================//
        {
            "label": "[cmake] Build",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/scripts/python/build.py",
                "${input:build_type}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },

        //====================== Install tasks ======================//
        {
            "label": "[cmake] Install",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/scripts/python/install.py",
                "${input:build_type}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },

        //====================== Configure and build tasks ======================//
        {
            "label": "[cmake] Configure and build",
            "dependsOn": [
                "[cmake] Configure",
                "[cmake] Build",
                "[cmake] Install"
            ],
            "dependsOrder": "sequence",
            "args": [
                "${input:build_type}"
            ],
            "problemMatcher": []
        }
    ]
}
